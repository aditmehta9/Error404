<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parent_button">

    <include layout="@layout/toolbar"
        android:id="@+id/parrent_button_toolbar"/>

    <Button
        android:id="@+id/parent_button_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="173dp"
        android:background="@android:color/holo_orange_light"
        android:text="Chats"
        android:textColor="@color/com_facebook_button_background_color_focused" />

    <Button
        android:id="@+id/parent_button_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="139dp"
        android:background="@android:color/holo_orange_light"
        android:text="Appointment"
        android:textColor="@color/buttonTextColor" />
</RelativeLayout>