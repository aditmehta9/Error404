<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".particular_student_email">

    <include layout="@layout/toolbar"
        android:id="@+id/activity_particular_student_email_toolbar"/>


    <Button
        android:id="@+id/activity_particular_student_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_send_grade_rollno"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="125dp"
        android:background="@android:color/holo_orange_light"
        android:shadowColor="@android:color/holo_red_dark"
        android:text="Send"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:id="@+id/activity_particular_student_email_rollno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_particular_student_email_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Enter Roll No..."
        android:inputType="text"
        android:textColor="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/activity_particular_student_email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_particular_student_email_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Particular Email to a student"
        android:textColor="@android:color/holo_red_light"
        android:textSize="17dp" />



</RelativeLayout>